[credential "https://github.com/accesio"]
  username=jdamon@accesio.com
[user]
	name = Jimi Damon
	email = jdamon@accesio.com
[color]
	ui = auto

[color "branch"]
  current = 227 reverse
  local = white bold
  remote = green
[color "diff"]
  meta = 210
  frag = 45 bold
  old = 197
  new =  29
  commit = 105

[color "status"]
  added = 227 bold
  changed = 42
  untracked = 23
  branch = 167 bold

[color "decorate"]
  head = 227 bold 
  branch  = 155 bold
  remoteBranch = 209 bold
  tag = 227 bold





[color]
  ui = true
[color "diff"]
  whitespace = red reverse
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = less -F -R -X
  abbrev = 12

[pretty]
        fixes = Fixes: %h (\"%s\")

[alias]
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        trash = "!export _tmpdir=$HOME/.Trash/$(date '+git_%Y%m%d%H%M%S') && mkdir -p ${_tmpdir} && git ls-files --others -z | xargs -I{} -0 --verbose bash -c 'mkdir -p "${_tmpdir}/$(dirname ${0})";mv  "$0" "${_tmpdir}/$(dirname $0)"' {} && unset _tmpdir"
        lg = log -p
        glg = log --graph --oneline --decorate
        week = log --after=\"one week ago\"  --pretty=format=\"The author of %Cred%h%Creset was %Cgreen%an%Creset, %ar%n%s%n\"
        wl = log --after=\"last friday\"  --pretty=format:\"The author of %Cred%h%Creset was %Cgreen%an%Creset, %ar%n%s%n\"
        llog = log --date=local --pretty=format=oneline
        plog = log --pretty=format:\"%Cgreen%h%Creset %s\"
        phlog = log --pretty=format:\"%Cgreen%h%Creset %Cred%ar%Creset %s\"
        phulog = log --pretty=format:\"%C(114)%h%Creset %C(bold 110)%ae %C(141)%ar%Creset %s\"
        rmdfiles = log  --diff-filter=D --summary --stat
	pl =  log --pretty=format:\"%C(114)%h%Creset %C(bold 110)%ae %C(141)%ar%Creset %s\"
        untracked = ls-files --others --exclude-standard7
        ls-untracked = ls-files --others --exclude-standard
        suno = status -uno        
        dt = difftool
        new-files  = ls-files -o  --exclude-standard
        ls-files-u = ls-files --others --exclude-standard
        common-ancestor = merge-base 
        ancestor = merge-base
        list-tags-remote = ls-remote --tags origin
        release-name = describe --always --abbrev=1
        current-branch = rev-parse --abbrev-ref HEAD
        log-since = "!f() { git log --oneline -n  $(($(git log --oneline $(git common-ancestor $(git current-branch) $1)..HEAD | wc -l)+1)) ;}; f" 

[credential]
	helper = cache --timeout=3600
[filter "indent"]
[filter "indent"]
[filter "indent"]

[push]
	default = matching

[difftool]
	prompt = false
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
[pager]
        status = true
[format]
	signoff = true
[log]
	graphColors = 254,123,211,210,2,23,45,216,97,153,181,209,41,195,132,230,55
